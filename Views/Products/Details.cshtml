@model decay_gaming_shop.Models.ProductModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="product">
        <div class="product__img-container">
            <img src=@Html.DisplayFor(model => model.ImageSrc) />
        </div>
        <div class="product__info">
            <h3>@Html.DisplayFor(model => model.Name)</h3>
            <p>@Html.DisplayFor(model => model.Category)</p>
            <p>$@Html.DisplayFor(model => model.Price)</p>
            <p>@Html.DisplayFor(model => model.Description)</p>
            <p>Rating: @Html.DisplayFor(model => model.Rating)</p>
            <div class="product__actions">
                <button>@Html.ActionLink("Back to List", "Index")</button>
                <button>@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) </button>
            </div>
        </div>
    </div>
</div>

<style>
    .product {
        margin-top: 40px;
        display: flex;
    }
    .product__img-container {
        width: 60%;
        height: 400px;
    }
    .product img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
    .product__info {
        width: 40%;
        display: flex;
        flex-direction: column;
    }
</style>